  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <%# @parts.each do |part| %>
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <%# end %>
    </ol>

    <!-- Wrapper for slides -->

        <div class="carousel-inner" role="listbox">
         <div class="item active">
          <%# @parts.each do |part| %>
          <%= cl_image_tag @part.photo, :width=>400, :height=>300, :fetch_format=>:auto, :crop=> :fill %>
          <%# end %>
          </div>
        </div>


  <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>



    <div class="col">
      <ul>
        <li class="font-weight-bold"><%= @part.name %></li>
        <br>
        <li><%= @part.description %></li>
        <li>Part ID : <%= @part.part_type_id %></li>
        <li><%= cl_image_tag @user.photo, class: "avatar" %>  Sell from:  <%= @user.first_name %>  </li>
        <li><%= @user.address %></li>
        <br>
        <li class="font-weight-bold list-unstyled"><span class="bg-secondary text-white p-1">Price : <%= @part.price %> â‚¬</span></li>
      </ul>
    </div>

    <div class="actions d-flex flex-column">
        <%= link_to "Buy",  new_part_trade_path(@part), class: "btn btn-success btn-block" %>

      <% if current_user.id == @part.user_id %>
        <%= link_to "Edit part", edit_part_path, class: "btn btn-warning btn-block"  %>
        <%= link_to "Delete part", part_path(@part), data: { confirm: "are you sure?" }, method: :delete, class: "btn btn-danger btn-block"%>
      <% end %>

      <%= link_to "Back to parts", parts_path, class: "btn btn-primary btn-block"  %>
    </div>
  </div>
</div>

