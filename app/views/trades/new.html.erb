
<main class="page">
  <section class="shopping-cart dark">
    <div class="container">
          <div class="block-heading">
            <h2>Shopping Cart</h2>
            <p>This is the shopping cart of Falcon</p>
          </div>
          <div class="content">
        <div class="row">
          <div class="col-md-12 col-lg-8">
            <div class="items">
              <div class="product">
                <div class="row">
                    <%= cl_image_tag @part.photo, crop: :fit, class: "col-md-5"%>
                  <div class="col-md-7">
                    <div class="info">
                      <div class="row">
                        <div class="col-md-5 product-name">
                          <div class="product-name">
                            <h4><%= link_to @part.name, part_path(@part)  %></h4>
                            <div class="product-info">
                              <p>
                                <strong>Part id: </strong><%= @part.part_type_id %>
                              </p>
                              <p>
                                <strong>Description: </strong> <%= @part.description %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-4 quantity">
                          <label for="quantity"><strong>Quantity</strong></label>
                          <p>1</p>
                        </div>
                        <div class="col-md-3 quantity">
                          <label for="price"><strong>Price</strong></label>
                          <p>€<%= @part.price %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-12 col-lg-4">
            <div class="summary">
              <h3>Summary</h3>
              <div class="summary-item">
                <span class="text">Subtotal</span>
                <span class="price" id="part_price">€ <%=  @part.price %></span>
              </div>
              <div class="summary-item">
                <span class="text">Shipping</span>
                <span class="price" id="shipping_price">€ 0</span>
              </div>
              <div class="summary-item">
                <span class="text">Total</span>
                <span class="price" id="total_price">€ <%=  @part.price %></span>
              </div>
                <%= simple_form_for [@part, @trade] do |f| -%>
                  <%= f.error_notification %>
                  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                  <!-- as: :hidden -->
                  <%= f.input :user_id, as: :hidden, :input_html => { :value => current_user.id } %>
                  <%= f.input :part_id, as: :hidden, :input_html => { :value => @part.id }  %>
                  <%= f.input :date, as: :hidden, :input_html => { :value => DateTime.now.to_date }  %>
                  <%= f.button :submit , class: "btn btn-primary btn-lg btn-block" %>
                <% end -%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
